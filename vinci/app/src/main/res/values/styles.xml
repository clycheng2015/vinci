<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="styleNetworkStateView">@style/NetworkStateViewTheme</item>
    </style>

    <!-- 标题栏样式 -->
    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- 标题栏弹出框样式 -->
    <style name="ToolBarPopupTheme" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@color/white</item>
    </style>

    <!-- 加载中的Progressbar样式 -->
    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!-- 网络加载状态View样式 -->
    <style name="NetworkStateViewTheme" parent="NetworkStateView.Style">
        <item name="nsvTextSize">16sp</item>
    </style>

    <!-- Progressbar加载背景样式 -->
    <style name="dialog_transparent_style" parent="@android:style/Theme.Dialog">
        <!-- Dialog的windowFrame 无边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 浮动与Activity窗口之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否半透明 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 没有title -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景色 -->
        <item name="android:windowBackground">@drawable/dialog_gray_dark_bg</item>
        <!-- 背景模糊显示 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- 自定义对话框样式 -->
    <style name="dialog" parent="@android:style/Theme.Dialog">

        <!-- Dialog的windowFrame 无边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 浮动与Activity窗口之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 没有title -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景色为透明 -->
        <item name="android:background">@android:color/transparent</item>
        <!-- 窗口背景色为透明，不设置这个属性，对话框背景会出现四个角 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景模糊显示 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 设置背景透明度 -->
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <!-- 自定义对话框样式 -->
    <style name="dialog_no_background" parent="@android:style/Theme.Dialog">

        <!-- Dialog的windowFrame 无边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 浮动与Activity窗口之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否半透明 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 没有title -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景色为透明 -->
        <item name="android:background">@android:color/transparent</item>
        <!-- 窗口背景色为透明，不设置这个属性，对话框背景会出现四个角 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景模糊显示 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 设置背景透明度 -->
        <!--  <item name="android:backgroundDimAmount">0.4</item> -->
    </style>


    <style name="CustomPopWindowStyle">
        <item name="android:windowEnterAnimation">@anim/popwindow_anim_in</item>
        <item name="android:windowExitAnimation">@anim/popwindow_anim_out</item>
    </style>

    <style name="dialog_can_diy" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowFrame">@null</item>>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/corners_bg_refund_plan</item>
    </style>
</resources>
